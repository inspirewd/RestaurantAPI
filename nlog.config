<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog-AspNetCore.txt">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<!-- the targets to write to -->
	<targets>
		<!-- File Target for all log messages with basic details -->

		<target xsi:type="File" name="exceptions" fileName="c:\backend\RestaurantAPIlogs\app-exceptions-${shortdate}.log"
                layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />
		
		<target xsi:type="File" name="allfile" fileName="c:\backend\RestaurantAPIlogs\app-${shortdate}.log"
                layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

		<!--Console Target for hosting lifetime messages to improve Docker / Visual Studio startup detection -->
		<!--<target xsi:type="Console" name="console" layout="${longdate}|${MicrosoftConsoleLayout}" />-->
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!--All logs, including from Microsoft-->
		<logger name="*" minlevel="Trace" writeTo="allfile" />
		<logger name="RestaurantAPI.*" minlevel="Error" writeTo="exceptions" /> <!-- BĘDZIEMY WYŁAPYWAĆ TYLKO TE ERRORY Z KLAS, KTÓRE SĄ W NAMESPACE RESTAURANT API-->

		<!--<logger name="PaperLenses.Scheduled.ScheduledBackgroundService" maxlevel="Info" final="true" />

		--><!--Output hosting lifetime messages to console target for faster startup detection --><!--
		<logger name="Microsoft.Hosting.Lifetime" maxlevel="Info" writeTo="" final="true" />

		--><!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) --><!--
		<logger name="Microsoft.*" maxlevel="Info" final="true" />
		<logger name="System.Net.Http.*" maxlevel="Info" final="true" />-->
	</rules>
</nlog>